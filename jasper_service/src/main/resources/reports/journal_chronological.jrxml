<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="journal_chronological"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <parameter name="company_id" class="java.lang.String">
        <defaultValueExpression><![CDATA[""]]></defaultValueExpression>
    </parameter>
    <parameter name="date_from" class="java.sql.Date"/>
    <parameter name="date_to" class="java.sql.Date"/>
    <parameter name="account_code" class="java.lang.String"/>

    <queryString>
        <![CDATA[
        SELECT
            je.entry_number,
            je.accounting_date,
            je.document_number,
            je.description AS je_description,
            el.description AS line_description,
            da.code AS debit_account,
            da.name AS debit_account_name,
            ca.code AS credit_account,
            ca.name AS credit_account_name,
            el.debit_amount,
            el.credit_amount,
            je.currency,
            cp.name AS counterpart_name
        FROM journal_entries je
        JOIN entry_lines el ON el.journal_entry_id = je.id
        LEFT JOIN accounts da ON da.id = el.debit_account_id
        LEFT JOIN accounts ca ON ca.id = el.credit_account_id
        LEFT JOIN counterparts cp ON cp.id = el.counterpart_id
        WHERE je.company_id = CAST($P{company_id} AS UUID)
            AND (CAST($P{date_from} AS DATE) IS NULL OR je.accounting_date >= CAST($P{date_from} AS DATE))
            AND (CAST($P{date_to} AS DATE) IS NULL OR je.accounting_date <= CAST($P{date_to} AS DATE))
            AND ($P{account_code} IS NULL OR $P{account_code} = ''
                 OR da.code = $P{account_code} OR ca.code = $P{account_code})
        ORDER BY je.accounting_date, je.entry_number, el.line_number
        ]]>
    </queryString>

    <field name="entry_number" class="java.lang.String"/>
    <field name="accounting_date" class="java.sql.Date"/>
    <field name="document_number" class="java.lang.String"/>
    <field name="je_description" class="java.lang.String"/>
    <field name="line_description" class="java.lang.String"/>
    <field name="debit_account" class="java.lang.String"/>
    <field name="debit_account_name" class="java.lang.String"/>
    <field name="credit_account" class="java.lang.String"/>
    <field name="credit_account_name" class="java.lang.String"/>
    <field name="debit_amount" class="java.math.BigDecimal"/>
    <field name="credit_amount" class="java.math.BigDecimal"/>
    <field name="currency" class="java.lang.String"/>
    <field name="counterpart_name" class="java.lang.String"/>

    <variable name="total_debit" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{debit_amount}]]></variableExpression>
    </variable>
    <variable name="total_credit" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{credit_amount}]]></variableExpression>
    </variable>

